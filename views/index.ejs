        <%- include("./partials/heads/headDef") %>


<body>
    <script>
        function clickado(valor) {
          switch(valor) {
               case 1:
               document.getElementById('hero').style.backgroundImage = "url('../images/departamento.jpg')";
              break;
               case 2:
               document.getElementById('hero').style.backgroundImage = "url('../images/emprendimiento.jpg')";
              break;
               case 3:
               document.getElementById('hero').style.backgroundImage = "url('../images/casas.jpg')";
              break;
               case 4:
               document.getElementById('hero').style.backgroundImage = "url('../images/oficina.jpg')";
              break;
               case 5:
               document.getElementById('hero').style.backgroundImage = "url('../images/locales.jpg')";
              break;
               case 6:
               document.getElementById('hero').style.backgroundImage = "url('../images/terrenos.jpg')";
              break;
               case 7:
               document.getElementById('hero').style.backgroundImage = "url('../images/deposito.jpg')";
              break;
              default:
              document.getElementById('hero').style.backgroundImage = "url('../images/terrenos.jpg')";
          }
       }
   </script>
        <%- include("./partials/header") %> 
        <main>
            <section id="hero">
                <div class="container">
                    <div class="content-center">
                        <h1>Expertos en propiedades</h1>
                    </div>
                    <form action="/buscar/propiedad" method="POST" id="buscarForm">
                        <div class="form-search">
                            <div class="radio-group">
                                <div onclick="clickado(1)">
                                    <input type="radio" name="propiedad" id="departamentos"  value="1">
                                    <label for="departamentos" class="btn">Departamentos</label>
                                </div>
                                <div onclick="clickado(2)">
                                    <input type="radio" name="propiedad" id="emprendimientos" value="6">
                                    <label for="emprendimientos" class="btn">Emprendimientos</label>
                                </div>
                                <div onclick="clickado(3)">
                                    <input type="radio" name="propiedad" id="casas" value="2">
                                    <label for="casas" class="btn">Casas</label>
                                </div>
                                <div onclick="clickado(4)">
                                    <input type="radio" name="propiedad" id="oficinas" value="3">
                                    <label for="oficinas" class="btn">Oficinas</label>
                                </div>
                                <div onclick="clickado(5)">
                                    <input type="radio" name="propiedad" id="locales"  value="5">
                                    <label for="locales" class="btn">Locales</label>
                                </div>
                                <div onclick="clickado(6)">
                                    <input type="radio" name="propiedad" id="terrenos" value="4">
                                    <label for="terrenos" class="btn">Terrenos</label>
                                </div>
                                <div onclick="clickado(7)">
                                    <input type="radio" name="propiedad" id="depositos" value="depositos">
                                    <label for="depositos" class="btn">Depositos</label>
                                </div>
                            </div>
                            <div id="searchbox" class="search-content v1">
                                <div class="radio-group-2">
                                    <div>
                                        <input type="radio" id="comprar" name="comprar_alquilar" checked="" value="venta">
                                        <label for="comprar">VENTA</label>
                                    </div>
                                    <div>
                                        <input type="radio" id="alquilar" name="comprar_alquilar" checked="" value="alquiler">
                                        <label for="comprar">ALQUILER</label>
                                    </div>
                                </div>
                                <div class="input-search desktop_767 ">
                                    <input type="text" autocomplete="off" placeholder="Ingresá ubicación, barrio o palabra clave" name="quicksearch" class="quicksearch ui-autocomplete-input" id="quicksearch"> 
                                    <button type="submit"><span class="btn orange search_propiedades"><ion-icon name="search-outline" class="icon-find" id="search_outline"></ion-icon> Buscar </span></button>
                                </div>
                            </div>
                        </div>
                    </form>
