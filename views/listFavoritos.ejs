<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/heads/headDef") %>
    <div id="container-main">
        <%- include("./partials/header") %> 
        <main>
            <section id="hero">
                <div class="content-center">
                    <h1>Expertos en propiedades</h1>
                </div>
                <% if(typeof resultados == 'object' && resultados.length > 0){ %>           
                    <section class="head">
                        <h2 class="text-center"><span><%=resultados.length%> Resultados</span></h2>
                    </section>
                    <section class="search-box1">
                        <div class="container-fluid"> 
                            <div class="col-lg-12 pl-3 pt-3">
                                <table class="table table-hover border bg-black">
                                    <thead>
                                        <tr>
                                            <th>Foto</th>
                                            <th>Titulo</th>
                                            <th>Precio</th>
                                            <th>Barrio</th>
                                            <th>Superficie</th>
                                            <th>Baños</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% resultados.forEach(function(propiedad) { %>
                                            <tr>
                                            <td><img src="/images/propiedades/<%=propiedad.fotos1%>?h=350&auto=compress&cs=tinysrgb" alt="..." class="img-responsive"/></td>
                                            <td style="width:10%;"><%=propiedad.titulo%></td>
                                            <td> $ <%=propiedad.precio%> </td>
                                            <td> <%=propiedad.barrio%> </td>
                                            <td><span><i class="fa fa-arrows-alt"></i><%=propiedad.suptotal%></span></td>
                                            <td><span><i class="fa fa-bath"></i><%=propiedad.banios%> Baños</span></td>
                                            <td class="actions" data-th="" style="width:20%;">
                                                <form method="GET" action="/admin/deleteFavorito/<%=propiedad.id%>">
                                                    <button class="btn btn-info btn-sm">Quitar de favoritos</button>
                                                </form>
                                                <form method="GET" action="/admin/<%=propiedad.id%>/detalleAdmin/">
                                                    <button class="btn btn-danger btn-sm">Más info</button>		
                                                </form>						
                                            </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </section>
                <% } else { %>
                    <section class="head">
                        <div class="container">
                            <h2 class="text-center"><span>0 Resultados</span></h2>
                        </div>
                    </section>
                <% } %> 
            </section>                       
        </main>
        <%- include("./partials/footer") %> 
    </div>

</body>
</html>