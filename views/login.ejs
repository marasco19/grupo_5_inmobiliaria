<!DOCTYPE html>
<html lang="en">


        <%- include("./partials/heads/headDef") %>

<body>
    <div id="container-main">
       

        <%- include("./partials/header") %> 

        <main>
            <section class="login">
                <div class="log_container">
                    <div class="login_form">
                        <div class="popup-header">
                            <p class="login-title">Iniciar sesión</p>
                        </div>
                        
                            <form class="contactar" action="/users/login" method="POST" class="create-form">
                                <div class="control-formulario">
                                    <input type="email" name="email" placeholder="Email *" value="<%=(locals.oldData)? oldData.email:"" %>">
                                    <% if (locals.errors && errors.email) { %>
                                     <p4 class="error_login"> <%= errors.email.msg %> </p4>
                                    <% } %>
                                </div>    
                                <div class="control-formulario">
                                <input type="password" name="password" placeholder="password">
                                <% if (locals.errors && errors.password) { %>
                                    <p4 class="error_login"> <%= errors.password.msg %> </p4>
                                   <% } %>
                                </div>
                                <div class="remember-forgot">
                                    <label class="checkbox-styled"><input checked="checked" class="remember-me" id="Login_RememberMe" name="Login_RememberMe" type="checkbox" value="true"><span>No cerrar sesión</span><input name="Login.RememberMe" type="hidden" value="false"></label>
                                    
                                        <a href="/users/forgot">¿Olvidaste tu contraseña?</a>
                                    
                                </div>
                               
                                <button type="submit" id="" class="bton bton_login">
                                    Iniciar sesión
                                </button>
                                <div class="register-box">
                                    <p>¿Todavía no estás registrado? </p>
                                    <a href="/users/register" id="registerPopupOpen" data-go-register="">Registrate ahora</a>
                                </div>
                            </form>  
                        </div>
                    </div>
                </div> 
            </section>  
        </main>
        
        <%- include("./partials/footer") %> 
        
    </div>   
</body>
</html>