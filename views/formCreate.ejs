<%- include("./partials/heads/headDef.ejs") %>
<body>
    <div id="container-main">
        <%- include("./partials/header") %> 
        <main>
            <div class="container">
                <!-- APPLICATION -->
                <div id="App" class="row pt-5">
                    <div class="card-title">
                        <h3>Agregar una propiedad</h3>
                    </div>
                    <!-- FORM -->
                    <div class="col-md-12">
                        <div class="card">
                            <form action="/admin" method="POST" id="product-form" class="card-body" >
                                <div id="errores">
                                <ul class="errores"></ul> 
                                </div>
                                <div class="card-header">
                                    <h5>Información General:</h5>
                                </div>
                                <div class="form-group">
                                    <label>Titulo</label>
                                    <input type="text" id="titulo" placeholder="" class="form-control" name="titulo">
                                </div>
                                <div class="form-group">
                                    <label>Estado</label>
                                    <select type="select" id="estado"  class="form-control" name="estado">
                                        <option value="activo" selected>Activo</option>
                                        <option value="inactivo" >Inactivo</option>
                                    </select>    
                                </div>
                                <div class="form-group">
                                    <label>Tipo de operación:</label>
                                    <select type="select" name="tipooperacion"  class="form-control">
                                        <option value="Alquiler">Alquiler</option>
                                        <option value="Venta" selected>Venta</option>
                                    </select>    
                                </div>
                                <div class="form-group">
                                    <label>Tipo de propiedad:</label>
                                    <select type="select" name="tipopropiedad"  class="form-control">
                                        <option value="1"  selected>Departamento</option>
                                        <option value="2">Casa</option>
                                        <option value="3">Oficina</option>
                                        <option value="4">Terreno</option>
                                        <option value="5">Local</option>
                                    </select>    
                                </div>
                                <div class="form-group">
                                    <label>Precio:</label>
                                    <input type="number" name="precio" placeholder="0" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Moneda:</label>
                                    <select type="select" name="moneda"  class="form-control">
                                        <option value="$"  selected>$</option>
                                        <option value="U$D">U$D</option>
                                    </select>    
                                </div>
                                <div class="form-group">
                                    <label>Dirección:</label>
                                    <input type="text" name="direccion" placeholder="" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Barrio:</label>
                                    <input type="text" name="barrio" placeholder="" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Latitud (Google Maps):</label>
                                    <input type="text" name="latitud" placeholder="" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Longitud (Google Maps):</label>
                                    <input type="text" name="longitud" placeholder="" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Descripción general:</label>
                                    <textarea name="descripciongral" class="form-control"></textarea>
                                </div>
                                <div class="form-group">
                                    <label>Superficie total:</label>
                                    <input type="number" name="suptotal" placeholder="0" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Superficie cubierta:</label>
                                    <input type="number" name="supcubierta" placeholder="0"  class="form-control">
                                </div>
                                <div class="form-group">    
                                    <label>Superficie descubierta:</label>
                                    <input type="number" name="supdescubierta" placeholder="0"  class="form-control">
                                </div>
                                <div class="card-header">
                                    <h5>Descripción del inmueble:</h5>
                                </div>
                                    <div class="form-group">    
                                        <label for="ambientes">Ambientes:</label><br>
                                        <input type="number" name="ambientes" placeholder="0" class="form-control">
                                        <label for="dormitorios">Cantidad de dormitorios:</label><br>
                                        <input type="number" name="dormitorios" placeholder="0" class="form-control">
                                        <label for="banios">Cantidad de baños:</label><br>
                                        <input type="number" name="banios" placeholder="0" class="form-control">
                                        <label for="medcocina">Medida de la cocina:</label><br>
                                        <input type="text" name="medcocina" class="form-control">
                                        <label for="tipococina">Tipo de cocina:</label><br>
                                        <input type="text" name="tipococina" class="form-control">
                                        <input type="checkbox" name="lavadero" name="lavadero" value="si">
                                        <label for="lavadero">Lavadero</label><br>
                                        <input type="checkbox" name="balcon" name="balcon" value="si">
                                        <label for="balcon">Balcón:</label><br>
                                        <input type="checkbox" name="baulera" name="baulera" value="si">
                                        <label for="baulera">Baulera:</label><br>
                                        <input type="checkbox" name="palier" name="palier" value="si">
                                        <label for="palier">Palier compartido</label><br>
                                        <input type="checkbox" name="recepcion" name="recepcion" value="si">
                                        <label for="recepcion">Recepción</label><br>
                                        <input type="checkbox" name="calefaccion" name="calefaccion" value="si">
                                        <label for="calefaccion">Calefacción</label><br>     
                                        <input type="checkbox" name="aire" name="aire" value="si">
                                        <label for="calefaccion">Aire acondicionado</label><br>          
                                </div>
                                <div class="card-header">
                                    <h5>Descripción complementaria:</h5>
                                </div>
                                <div class="form-group">    
                                    <label for="expensas">Expensas:</label><br>     
                                    <input type="number" name="expensas" placeholder="0" class="form-control">
                                </div> 
                                <div class="form-group">    
                                    <label for="abl">ABL:</label><br>     
                                    <input type="number" name="abl" placeholder="0"  class="form-control">
                                </div>
                                <div class="form-group">    
                                    <label for="tipopiso">Tipo de piso:</label><br>     
                                    <input type="text" name="tipopiso" placeholder="" class="form-control">
                                </div> 
                                <div class="form-group">    
                                    <label for="nropisos">Nº de Pisos del Edificio:</label><br>     
                                    <input type="number" name="nropisos" placeholder="0" class="form-control">
                                </div>
                                <div class="form-group">    
                                    <label for="dptosxpisos">Deptos. por Piso:</label><br>     
                                    <input type="number" name="ptosxpisos" placeholder="0" class="form-control">
                                </div>
                                <div class="form-group">    
                                    <label for="ascensor">Ascensor:</label><br>     
                                    <input type="number" name="ascensor" placeholder="0" class="form-control">
                                </div>
                                <div class="card-header">
                                    <h5>Plano:</h5>
                                </div>
                                <input type="file" class="form-control-file" id="planos" name="planos">
                                <div class="card-header">
                                    <h5>Amenities:</h5>
                                </div>
                                <div class="form-group">  
                                    <input type="checkbox" name="gimnasio" name="gimnasio" value="si">  
                                    <label for="gimnasio">Gimnasio:</label><br>       
                                    <input type="checkbox" name="lavaderocen" name="lavaderocen" value="si">  
                                    <label for="lavaderocen">Lavadero Central:</label><br>       
                                    <input type="checkbox" name="sum" name="sum" value="si">  
                                    <label for="sum">S.U.M.:</label><br>       
                                    <input type="checkbox" name="solarium" name="solarium" value="si">  
                                    <label for="solarium">Solarium:</label><br>       
                                    <input type="checkbox" name="salonfiestas" name="salonfiestas" value="si">  
                                    <label for="salonfiestas">Salón de Fiestas:</label><br>       
                                    <input type="checkbox" name="guardabici" name="guardabici" value="si">  
                                    <label for="guardabici">Guarda Bicicletas:</label><br>       
                                    <input type="checkbox" name="piscina" name="piscina" value="si">  
                                    <label for="piscina">Piscina:</label><br>       
                                    <input type="checkbox" name="quincho" name="quincho" value="si">  
                                    <label for="quincho">Quincho:</label><br>       
                                    <input type="checkbox" name="parrilla" name="parrilla" value="si">  
                                    <label for="parrilla">Parrilla:</label><br>       
                                    <input type="checkbox" name="seguridad" name="seguridad" value="si">  
                                    <label for="seguridad">Seguridad 24 hs:</label><br>       
                                    <input type="checkbox" name="grupoelec" name="grupoelec" value="si">  
                                    <label for="grupoelec">Grupo Electrógeno:</label><br>       
                                </div>
                                <div class="card-header">
                                    <h5>Fotos Galeria</h5>
                                </div>
                                <input type="file" class="form-control-file" id="fotos1" name="fotos1">
                                <input type="file" class="form-control-file" id="fotos2" name="fotos2">
                                <input type="file" class="form-control-file" id="fotos3" name="fotos3">
                                <input type="file" class="form-control-file" id="fotos4" name="fotos4">
                                <input type="file" class="form-control-file" id="fotos5" name="fotos5">
                                <input type="file" class="form-control-file" id="fotos6" name="fotos6">
                                 
                                <div class="card-header">
                                    <h5>Videos</h5>
                                </div>   
                                <div class="form-group">
                                    <label>Youtube:</label>
                                    <input type="text" name="youtube" placeholder="Ingresa un ID de video, Ej: bU1QPtOZQZU" class="form-control">
                                </div>  
                                <div class="form-group">
                                    <label>Vimeo:</label>
                                    <input type="text" name="vimeo" placeholder="Ingresa un ID de video, Ej: 134173961" class="form-control">
                                </div> 
                                <input type="submit" value="Guardar" class="bton bton_login">
                            </form>
                        </div>
                    </div>
            </div>          
        </main>
        <%- include("./partials/footer") %> 
    </div>
    <script src="/js/propiedadValidator.js"></script>
</body>
</html>